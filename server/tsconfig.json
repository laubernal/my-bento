{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "target": "es2017",
    "esModuleInterop": true,
    "incremental": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",    
    "paths": {
      "Shared/*": [
        "./src/Shared/*"
      ],
      "Authorization/*": [
        "./src/Authorization/*",
        "./src/Authorization"
      ],
      "Menu/*": [
        "./src/Menu/*",
        "./src/Menu"
      ]
    },
  },
  "watchOptions": {
    "watchFile": "dynamicPriorityPolling",
    "excludeDirectories": ["**/node_modules", "_build"],
  }
}